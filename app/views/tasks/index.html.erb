<div class="p-3">
  <div class="justify-content-md-center">
    <h1>My tasks</h1>
     <% @tasks.each do |task| %>
      <% if task.completed %>
        <input type="checkbox" name="task" checked>
        <% else %>
        <input type="checkbox" name="task">
        <% end %>
        <span><%= link_to task.title, task_path(task) %></span>
        <span><%= link_to "", task_path(task), method: :delete, data: { confirm: "Are you sure?" }, class: "far fa-trash-alt" %></span><br>
      <% end %>
    <br><%= link_to "Add a new task", tasks_new_path %>
  </div>
</div>

