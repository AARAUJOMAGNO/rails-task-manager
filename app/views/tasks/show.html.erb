<div class="p-3">
  <h3><%=@task.title%></h3>
  <p><%= @task.details %></p>
  <% if @task.completed %>
    <input type="checkbox" name="task" checked>
    <% else %>
    <input type="checkbox" name="task">
    <% end %>
    <span>This task is not completed yet!</span><br>

  <%= link_to "Back to list", tasks_path %>
</div>

<%= link_to "Edit this task", task_edit_path, class: "btn btn-primary ml-3"  %>
